{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "max-depth": ["error", 2],
    "max-lines-per-function": ["error", 20],
    "no-console": "warn",
    "no-param-reassign": "error",
    "no-undefined": 0,
    "no-constant-condition": 0,
    "no-unused-private-class-members": 0,
    "lines-between-class-members": 0
  }
}
